<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="CrossBrowsingTest" thread-count= "4" parallel= "tests">

	<listeners>
		<listener class-name="utilities.ExtentReport" />
	</listeners>

	<test name="Running in Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="testCases.AdminUserTestCases"></class>
			<class name="testCases.LoginTestCases"></class>
			<class name="testCases.HomePageTestCases"></class>
		</classes>
	</test>
	<test name="Running in Edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="testCases.AdminUserTestCases"></class>
			<class name="testCases.LoginTestCases"></class>
			<class name="testCases.HomePageTestCases"></class>
		</classes>
	</test>
	<test name="Running in Firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="testCases.AdminUserTestCases"></class>
			<class name="testCases.LoginTestCases"></class>
			<class name="testCases.HomePageTestCases"></class>
		</classes>
	</test>
</suite>
